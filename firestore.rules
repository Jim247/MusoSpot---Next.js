rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access only to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Example: Restrict access to user documents
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Example: Restrict access to events
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.agentId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.agentId;
    }
  }
}